<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StudentsServlet</servlet-name>
        <servlet-class>com.sazuha.web.StudentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentsServlet</servlet-name>
        <url-pattern>/studentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.sazuha.web.CourseServlet</servlet-class>
    </servlet>\
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/manager/courseServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>com.sazuha.web.TeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teacherServlet</url-pattern>
    </servlet-mapping>
</web-app>